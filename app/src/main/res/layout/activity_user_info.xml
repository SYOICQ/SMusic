<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/myinfo_back"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            />
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="我的信息"
            android:textSize="15dp"
            android:fontFamily="cursive"
            android:gravity="center_vertical"
            android:typeface="serif" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp"
        android:background="@drawable/corner_bg1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myinfo_touxiang"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/p1"
            android:layout_gravity="center_vertical"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/code1"
            android:layout_alignParentRight="true"
            android:id="@+id/myinfo_code" />
        <TextView
            android:id="@+id/myinfo_username"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:text="用户名七二杠七二各位热dsgrewsdg"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/myinfo_touxiang"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/myinfo_region"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:text="未知地区"
            android:background="@drawable/round_btn"
            android:layout_below="@id/myinfo_username"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/myinfo_username"
            />
        <Button
            android:id="@+id/myinfo_edit"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:text="编辑资料"
            android:background="@drawable/round_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个性签名："
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/myinfo_personal_signature"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:text="未填写"
            android:textSize="12dp"
            android:maxLines="3"
            android:ellipsize="end"
            />

    </LinearLayout>
    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50ffffff"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:text="资料"
        android:textSize="16dp"
        android:layout_marginLeft="5dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#50ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乐龄:"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/myinfo_music_age"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星座:"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/myinfo_constellation"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别:"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/myinfo_sex"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兴趣爱好:"
                android:textSize="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/myinfo_hobby"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
